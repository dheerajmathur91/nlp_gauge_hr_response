<h1>Listing Sentiments</h1>
 
<table class="table table-striped">
  <tr>
    <th>Text</th>
    <th>Behavior</th>
    <th>Actions</th>
  </tr>
  <% @sentiments.each do |sentiment| %>
    <tr>
      <td><%= sentiment.text %></td>
      <td><%= sentiment.behavior %></td>
      <td>
        <div class="btn-group btn-group-xs" role="group" aria-label="...">
          <%= link_to 'Show', sentiment_path(sentiment), :class => "btn btn-info" %>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'Post', new_sentiment_path, :class => "btn btn-primary" %>